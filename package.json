{
  "name": "agent-code-tools",
  "version": "1.0.0",
  "description": "A collection of MCP (Model Context Protocol) servers that provide various code-related functionalities to AI agents.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:regex-tools && npm run build:math-tools && npm run build:string-tools && npm run build:date-tools",
    "build:regex-tools": "cd servers/regex-tools && npm run build",
    "build:math-tools": "cd servers/math-tools && npm run build",
    "build:string-tools": "cd servers/string-tools && npm run build",
    "build:date-tools": "cd servers/date-tools && npm run build",
    "dev:regex-tools": "cd servers/regex-tools && npm run dev",
    "dev:math-tools": "cd servers/math-tools && npm run dev",
    "dev:string-tools": "cd servers/string-tools && npm run dev",
    "dev:date-tools": "cd servers/date-tools && npm run dev",
    "clean": "npm run clean:regex-tools && npm run clean:math-tools && npm run clean:string-tools && npm run clean:date-tools",
    "clean:regex-tools": "cd servers/regex-tools && npm run clean",
    "clean:math-tools": "cd servers/math-tools && npm run clean",
    "clean:string-tools": "cd servers/string-tools && npm run clean",
    "clean:date-tools": "cd servers/date-tools && npm run clean"
  },
  "keywords": ["mcp", "server", "tools", "utilities", "Code-tools", "AI", "agents"],
  "author": "Aidan Paetsch",
  "license": "MIT",
  "workspaces": [
    "servers/*"
  ],
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  }
}
