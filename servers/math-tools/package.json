{
  "name": "math-tools-mcp-server",
  "version": "1.0.0",
  "description": "A MCP (Model Context Protocol) server that provides various mathematical functionalities to AI agents.",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "dev": "cross-env TRANSPORT=both PORT=${PORT:-3002} tsx src/index.ts",
    "dev:stdio": "cross-env TRANSPORT=stdio tsx src/index.ts",
    "dev:http": "cross-env TRANSPORT=http PORT=${PORT:-3002} tsx src/index.ts",

    "start": "node build/index.js",
    "start:stdio": "cross-env TRANSPORT=stdio node build/index.js",
    "start:http": "cross-env TRANSPORT=http PORT=${PORT:-3002} node build/index.js",
    "start:both": "cross-env TRANSPORT=both PORT=${PORT:-3002} node build/index.js",

    "clean": "npx rimraf build || rmdir /s /q build 2>nul || echo \"Cleaned\""
  },
  "bin": {
    "math-tools-mcp-server": "build/index.js"
  },
  "files": [
    "build/**/*"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "express": "^5.0.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^5.0.0",
    "typescript": "^5.0.0",
    "@types/cors": "^2.8.17"
  },
  "keywords": [
    "mcp",
    "server",
    "math",
    "calculator",
    "numbers"
  ],
  "author": "Aidan Paetsch",
  "license": "MIT"
}
