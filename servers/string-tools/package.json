{
  "name": "string-tools-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server providing string manipulation and comparison utilities",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "dev": "cross-env TRANSPORT=both PORT=${PORT:-3003} tsx src/index.ts",
    "dev:stdio": "cross-env TRANSPORT=stdio tsx src/index.ts",
    "dev:http": "cross-env TRANSPORT=http PORT=${PORT:-3003} tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node build/index.js",
    "start:stdio": "cross-env TRANSPORT=stdio node build/index.js",
    "start:http": "cross-env TRANSPORT=http PORT=${PORT:-3003} node build/index.js",
    "start:both": "cross-env TRANSPORT=both PORT=${PORT:-3003} node build/index.js",

    "clean": "npx rimraf build || rmdir /s /q build 2>nul || echo \"Cleaned\""
  },
  "bin": {
    "string-tools-mcp-server": "build/index.js"
  },
  "files": [
    "build/**/*"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "express": "^5.0.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^5.0.0",
    "typescript": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/cors": "^2.8.17",
    "jest": "^30.0.0",
    "ts-jest": "^29.2.0"
  },
  "keywords": [
    "mcp",
    "server",
    "string",
    "text",
    "utilities"
  ],
  "author": "Aidan Paetsch",
  "license": "MIT"
}
